{
  "compilerOptions": {
   "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "skipLibCheck": true
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "ts-node": {
    "esm": true
  },
  "include": ["src"]
}
